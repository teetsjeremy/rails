<h1>Hello, Rails!</h1>

<% if current_user %>
  <%= image_tag(current.user.avatar_thumbnail) %><br>
  <%= link_to 'Sign Out', destroy_user_session_path,
              method: :delete%><br>
  <%= link_to 'Edit Account', edit_user_registration_path %><br>
  <%= link_to 'View Blog', controller: 'articles' %>
  <% else %>
  <%= link_to 'Sign Up', new_user_registration_path %><br>
  <%= link_to 'Sign In', new_user_session_path %>
  <% end %>

