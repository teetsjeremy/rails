<h1>
  <strong>Title:</strong>
  <%= @article.title %>
</h1>
<p>
  <strong>Text:</strong>
  <%= @article.text %>
</p>

<div class="image">
  <%= image_tag(@article.image, style:'width:400px') %>
</div>

<p><%= link_to 'Destroy', article_path(image),
                method: :delete,
                data: { confirm: 'Are you sure?' } %></p>

<h3>Comments</h3>
<%= render @article.comments %>

<h3>Add a comment:</h3>
<%= render 'comments/form' %>

<%= link_to 'Edit', edit_article_path(@article) %>
<%= link_to 'Back', articles_path %>
