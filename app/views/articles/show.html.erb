<h1>
  <strong>Title:</strong>
  <%= @article.title %>
</h1>
<p>
  <strong>Text:</strong>
  <%= @article.text %>
</p>
<div class="image">
  <% if @article.image.present? %>
  <%= image_tag(@article.image, style:'width:500px') %>
  <% end %>
</div>
<p>
  <strong>User:</strong>
    <%= @article.user.capitalize %>
</p>

<h3>Comments (<%= @article.comments.count %>)</h3>
<%= render @article.comments %>

<h3>Add a comment:</h3>
<%= render 'comments/form' %>

<%= link_to 'Edit', edit_article_path(@article) %>
<%= link_to 'Back', articles_path %>
